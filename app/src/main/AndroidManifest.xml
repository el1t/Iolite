<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.el1t.iolite" >

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme"
		android:launchMode="singleTop">
		<activity
	        android:name="com.el1t.iolite.LoginActivity">
	        <intent-filter>
	            <action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="com.el1t.iolite.BlockActivity"
			android:label="@string/block_view"
			android:parentActivityName="com.el1t.iolite.LoginActivity"
			android:launchMode="singleTop">
		</activity>
		<activity
			android:name="com.el1t.iolite.SignupActivity"
			android:label="@string/activity_view"
			android:parentActivityName="com.el1t.iolite.BlockActivity"
			android:launchMode="singleTop">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="com.el1t.BlockActivity" />
		</activity>
	</application>

</manifest>
