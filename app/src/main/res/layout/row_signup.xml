<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".SignupFragment">

	<ProgressBar
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:indeterminate="false"
		android:progress="0"
		android:progressDrawable="@drawable/progressbar_listview"
		android:background="@android:color/transparent"
		android:id="@+id/capacity"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="16dp">
		<!-- Avatar -->
		<ImageView
			android:id="@+id/circle"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_marginRight="@dimen/activity_horizontal_margin"
			android:layout_marginEnd="@dimen/activity_horizontal_margin"
			android:src="@drawable/activity_letter"
			tools:ignore="ContentDescription"/>

		<ImageView
			android:id="@+id/icon"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:scaleType="center"
			android:src="@drawable/activity_letter"
			tools:ignore="ContentDescription"/>

		<TextView
			android:id="@+id/letter"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:gravity="center"
			android:fontFamily="sans-serif-light"
			android:includeFontPadding="false"
			android:textColor="@color/background"
			android:textSize="25dp"
			tools:ignore="SpUsage" />

		<!-- Information -->
		<!-- Title -->
		<TextView
			android:id="@+id/title"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/circle"
			android:layout_toEndOf="@id/circle"
			android:gravity="center_vertical"
			android:textColor="@android:color/primary_text_light"
			android:alpha=".87"
			android:textSize="16sp"
			android:includeFontPadding="false"
			android:singleLine="true"
			android:ellipsize="end" />
		<!-- Room number -->
		<TextView
			android:id="@+id/room"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/title"
			android:layout_toRightOf="@id/circle"
			android:layout_toEndOf="@id/circle"
			android:gravity="center_vertical"
			android:singleLine="true"
			android:textSize="14sp"
			android:textColor="@android:color/primary_text_light"
			android:alpha=".87" />
		<!-- Sponsors -->
		<TextView
			android:id="@+id/sponsors"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/title"
			android:layout_toRightOf="@id/room"
			android:layout_toEndOf="@id/room"
			android:gravity="center_vertical"
			android:ellipsize="end"
			android:singleLine="true"
			android:textSize="14sp"
			android:textColor="@android:color/primary_text_light"
			android:alpha=".54" />
		<!-- Description -->
		<TextView
			android:id="@+id/description"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/circle"
			android:layout_toEndOf="@id/circle"
			android:layout_below="@id/room"
			android:gravity="center_vertical"
			android:layout_marginTop="2dp"
			android:textColor="@android:color/primary_text_light"
			android:alpha=".54"
			android:textSize="14sp"
			android:includeFontPadding="false"
			android:ellipsize="end"
			android:singleLine="true" />
	</RelativeLayout>
</FrameLayout>